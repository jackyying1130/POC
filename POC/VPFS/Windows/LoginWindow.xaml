<Window x:Class="VPFS.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ShowInTaskbar="False"
        Title="Login" Height="156" Width="380">
    <Grid Margin="0,0,2,2">
        <Label Content="User Name" HorizontalAlignment="Left" Margin="15,19,0,0" VerticalAlignment="Top" Width="95" Height="25"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="15,64,0,0" VerticalAlignment="Top" Width="95" Height="25"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="157,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Name="txtUserName"/>
        <PasswordBox HorizontalAlignment="Left" Margin="157,70,0,0" VerticalAlignment="Top" Width="176" Name="txtPassword" Height="19"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="157,108,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Login"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="258,108,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Cancel"/>

    </Grid>
</Window>
